class Solution {
public:
    bool scoreBalance(string s) {
        int n = s.size();
        if (n < 2) return false;
        int t = 0;
        for (char c : s) t += c - 'a' + 1;
        int p = 0;
        for (int i = 0; i < n - 1; ++i) {
            p += s[i] - 'a' + 1;
            if (p == t - p) return true;
        }
        return false;
    }
};
