class Solution {
public:
    int earliestFinishTime(
        vector<int>& landStartTime,
        vector<int>& landDuration,
        vector<int>& waterStartTime,
        vector<int>& waterDuration) {

        int n=landStartTime.size(), m=waterStartTime.size();
        int ans = INT_MAX;
        for(int i=0; i<n; i++){
            int x = landStartTime[i];
            int y = x + landDuration[i];

            for(int j=0; j<m; j++){
                int p = max(y,waterStartTime[j]);
                int q = p + waterDuration[j];
                ans = min(ans,q);
            }
        }

        for(int i=0; i<m; i++){
            int x = waterStartTime[i];
            int y = x + waterDuration[i];

            for(int j=0; j<n; j++){
                int p = max(y,landStartTime[j]);
                int q = p + landDuration[j];
                ans = min(ans,q);
            }
        }
        return ans;
    }
};
