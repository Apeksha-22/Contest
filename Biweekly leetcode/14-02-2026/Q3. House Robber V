class Solution {
public:
    long long rob(vector<int>& nums, vector<int>& colors) {
        int n=nums.size();
        auto temp=nums;
        long long dp0=0, dp1 = temp[0];

        for(int i=1; i<n; i++){
            long long dp2 = max(dp0, dp1);
            long long dp3;
            if(colors[i] == colors[i-1])
                dp3 = dp0+temp[i];
            else
                dp3 = max(dp0,dp1)+temp[i];
            
            dp0 = dp2;
            dp1 = dp3;
        }
        return max(dp0,dp1);
    }
};Â©leetcode
