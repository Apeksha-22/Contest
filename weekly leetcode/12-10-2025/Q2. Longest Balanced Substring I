class Solution {
public:
    int longestBalanced(string s) {
        int n = s.size();
        string temp = s;
        int ans = 0;
        for (int i = 0; i < n; ++i) {
            int cnt[26] = {0};
            for (int j = i; j < n; ++j) {
                ++cnt[s[j] - 'a'];
                int freq = -1;
                bool ok = true;
                for (int c = 0; c < 26; ++c) {
                    if (cnt[c]) {
                        if (freq == -1)
                            freq = cnt[c];
                        else if (cnt[c] != freq) {
                            ok = false;
                            break;
                        }
                    }
                }
                if (ok)
                    ans = max(ans, j - i + 1);
            }
        }
        return ans;
    }
};
