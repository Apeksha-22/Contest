class Solution {
public:
    vector<vector<int>> reverseSubmatrix(vector<vector<int>>& grid, int x,
                                         int y, int k) {
        for(int i = 0; i < k / 2; ++i) {
            int r1 = x + i;
            int r2 = x + k - 1 - i;
            for(int c = 0; c < k; ++c) {
                swap(grid[r1][y + c], grid[r2][y + c]);
            }
        }
        return grid;
    }
};
