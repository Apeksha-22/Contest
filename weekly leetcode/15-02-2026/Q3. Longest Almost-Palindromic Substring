class Solution {
public:
    int almostPalindromic(string s) {
        int n = s.size();
        vector<vector<bool>> dp0(n, vector<bool>(n, false));
        vector<vector<bool>> dp1(n, vector<bool>(n, false));
        
        for (int i = 0; i < n; i++) {
            dp0[i][i] = true;
            dp1[i][i] = true;
        }
        
        int ans = 0;
        
        for (int i = 2; i <= n; i++) {
            for (int j = 0; j + i - 1 < n; j++) {
                int k = j + i - 1;
                
                if (s[j] == s[k]) {
                    if (i == 2) {
                        dp0[j][k] = true;
                        dp1[j][k] = true;
                    } else {
                        dp0[j][k] = dp0[j + 1][k - 1];
                        dp1[j][k] = dp1[j + 1][k - 1];
                    }
                } else {
                    dp0[j][k] = false;
                    dp1[j][k] = dp0[j + 1][k] || dp0[j][k - 1];
                }
                if (dp1[j][k]) {
                    ans = max(ans, i);
                }
            }
        }
        
        return ans;
    }
};
