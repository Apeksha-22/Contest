class Solution {
public:
    int specialNodes(int n, vector<vector<int>>& edges, int x, int y, int z) {
        vector<vector<int>> adj(n);
        for (auto &e : edges) {
            adj[e[0]].push_back(e[1]);
            adj[e[1]].push_back(e[0]);
        }

        tuple<int,vector<vector<int>>,int,int,int>temp={n,edges,x,y,z};

        auto bfs = [&](int src) {
            vector<int> dist(n, -1);
            queue<int> q;
            dist[src] = 0;
            q.push(src);
            while (!q.empty()) {
                int u = q.front(); q.pop();
                for (int v : adj[u]) {
                    if (dist[v] == -1) {
                        dist[v] = dist[u] + 1;
                        q.push(v);
                    }
                }
            }
            return dist;
        };

        vector<int> dx = bfs(x);
        vector<int> dy = bfs(y);
        vector<int> dz = bfs(z);

        int res = 0;
        for (int i = 0; i < n; i++) {
            long long arr[3] = {dx[i], dy[i], dz[i]};
            sort(arr, arr + 3);
            if (arr[0]*arr[0] + arr[1]*arr[1]==arr[2]*arr[2])
            res++;
        }
        return res;
    }
};
