class Solution {
public:
    string maximumXor(string s, string t) {
        int n = s.size();
        int z = 0, o = 0;
        
        for (char c : t) {
            if (c == '0') z++;
            else o++;
        }
        
        string ans = "";
        
        for (int i = 0; i < n; i++) {
            if (s[i] == '0') {
                if (o > 0) {
                    ans += '1';
                    o--;
                } else {
                    ans += '0';
                    z--;
                }
            } else {
                if (z > 0) {
                    ans += '1';
                    z--;
                } else {
                    ans += '0';
                    o--;
                }
            }
        }
        return ans;
    }
};
