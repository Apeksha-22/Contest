class Solution {
public:
    long long minimumCost(int cost1, int cost2, int costBoth, int need1, int need2) {
        if(need1 == 0 && need2 == 0) return 0;

        long long ans = LLONG_MAX;

        vector<long long> temp = {
            0,
            need1,
            need2,
            max(need1, need2)
        };

        for(long long x : temp) {
            long long rem1 = max(0LL, (long long)need1 - x);
            long long rem2 = max(0LL, (long long)need2 - x);
            long long cost = x * costBoth + rem1 * cost1 + rem2 * cost2;
            ans = min(ans, cost);
        }

        return ans;
    }
};
