class Solution {
public:
    long long minCost(string s, vector<int>& cost) {
        int n=cost.size();
        vector<int>temp=cost;
        vector<long long>cnt(26,0);
        long long t=0;
        for(int i=0; i<n; i++){
            t += temp[i];
            cnt[s[i] - 'a'] += temp[i];
        }
        long long mx=0;
        for(int i=0; i<26; i++){
            mx = max(mx, cnt[i]);
        }
        return  t - mx;
    }
};
