class Solution {
public:
    long long maxProduct(vector<int>& nums) {
        long long max1 = LLONG_MIN, max2 = LLONG_MIN, max3 = LLONG_MIN;
        long long min1 = LLONG_MAX, min2 = LLONG_MAX;
        for (int x : nums) {
            long long val = x;
            if (val > max1) {
                max3 = max2;
                max2 = max1;
                max1 = val;
            } else if (val > max2) {
                max3 = max2;
                max2 = val;
            } else if (val > max3) {
                max3 = val;
            }

            if (val < min1) {
                min2 = min1;
                min1 = val;
            } else if (val < min2) {
                min2 = val;
            }
        }

        long long org = max(max1 * max2 * max3, min1 * min2 * max1);

        long long ab1 = 0, ab2 = 0;
        for (int x : nums) {
            long long abv = llabs((long long)x);
            if (abv > ab1) {
                ab2 = ab1;
                ab1 = abv;
            } else if (abv > ab2) {
                ab2 = abv;
            }
        }

        const long long LIM = 100000LL;
        long long rpd = ab1 * ab2 * LIM;

        return max(org, rpd);
    }
};
